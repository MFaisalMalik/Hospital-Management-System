    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Anton&family=Audiowide&family=Bitter:wght@300;400&family=DM+Serif+Display&family=Dosis:wght@300&family=EB+Garamond:wght@400;500&family=Khand:wght@300&family=Open+Sans:ital,wght@0,300;0,800;1,800&family=Sofia&display=swap"
        rel="stylesheet">
</head>

<body>
    <div class="customd">
        <div class="login_field">
            <form method="post" action="/signup">
                <div id="signin_email">
                   <input type="email" id="email" name="email" placeholder="E-mail" style="font-family: 'Khand', sans-serif;">
                </div>
                <div id="signin_pass">
                    <input type="password" id="pass" name="password" placeholder="Password" style="font-family: 'Khand', sans-serif;">
                </div>
                <div id="signin_pass">
                    <input type="password" id="pass" name="retypepassword" placeholder="Re-type Password" style="font-family: 'Khand', sans-serif;">
                </div>
                <div id="signin_type">
                    <label><input style="font-family: 'Khand', sans-serif;" type="text" list="user" name="user" placeholder="User Type" required/></label>
                    <datalist id="user">
                        <option value="receptionist">
                        <option value="pharmacist">
                    </datalist><br>
                </div>
                <button id="submit" name="submit" class="btn btn-primary">Sign up</button>

            </form>
            
            <% if (message.length > 0) {%>
                <p><%= message %></p>
            <% } %>
        </div>

        <div class="head_sign" style="text-align: center; margin-top: 17rem; margin-left: 22rem;">
            <a href="" style="text-decoration: none;">
                <h1 style="font-size: 4rem; font-family: 'Audiowide', cursive; margin: 0; color: azure;"> THE</h1> 
                <h1 style="font-size: 4rem; font-family: 'Audiowide', cursive; margin: 0; color: azure;">HEALOGICS</h1>
                <h1 style="font-size: 4rem; font-family: 'Audiowide', cursive; margin: 0; color: azure;">PAKISTAN</h1>
            </a>
        </div>

    </div>
</body>

</html>