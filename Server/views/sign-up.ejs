    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Anton&family=DM+Serif+Display&family=Dosis:wght@300&family=EB+Garamond:wght@400;500&family=Khand:wght@300&family=Open+Sans:ital,wght@0,300;0,800;1,800&display=swap"
        rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css2?family=Anton&family=Audiowide&family=DM+Serif+Display&family=Dosis:wght@300&family=EB+Garamond:wght@400;500&family=Khand:wght@300&family=Open+Sans:ital,wght@0,300;0,800;1,800&family=Sofia&display=swap"
